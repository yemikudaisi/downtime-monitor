{
  "build": {
    "beforeBuildCommand": "pnpm generate",
    "beforeDevCommand": "pnpm dev",
    "devPath": "http://localhost:3000",
    "distDir": "../dist/public"
  },
  "package": {
    "productName": "downtime-monitor",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": true,
      "fs": {
        "scope": [
          "**",
          "$HOME/*",
          "$APPDATA/*",
          "$APPDATA/extensions/*",
          "$APPDATA/databases/*",
          "$APPCONFIG/*",
          "$RESOURCE/*"
        ],
        "all": true
      },
      "window": {
        "all": true
      },
      "path": {
        "all": true
      },
      "shell": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "category": "ServerTool",
      "copyright": "Â© 2020-2024 Scarlet (hello@scarlet.dev)",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "app.dtmon",
      "longDescription": "Network services status monitoring tool",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 800,
        "resizable": true,
        "title": "Downtime Monitor",
        "width": 1200,
        "decorations": false,
        "transparent": true
      }
    ]
  }
}
